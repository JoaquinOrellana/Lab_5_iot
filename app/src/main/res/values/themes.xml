<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lab_5_iot" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="mdcTheme">
        <item name="cornerSize">20dp</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="boton_rojo" parent="Theme.Material3.DayNight">
    <!-- Primary brand color. -->
        <item name="colorPrimary">#FF1F41</item>
        <item name="colorPrimaryVariant">#240056</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="shapeAppearance">@style/mdcTheme</item>
    </style>
    <style name="boton_amarillo" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#FFC107</item>
        <item name="colorPrimaryVariant">#240056</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="shapeAppearance">@style/mdcTheme</item>
    </style>
</resources>